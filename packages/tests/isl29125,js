import assert from 'assert';
import sinon from 'sinon';
import { I2C } from "@dtex/mock-io";
import Isl29125 from '@j5e/isl29125';

describe('Isl29125', function() {
  
  describe('Instantiation', function() {
    
    it('should return a valid isl29125 instance when passed an options object', async function() {
      
      const color = await new isl29125({
        io: I2C
      });
      
      assert.equal(color instanceof Isl29125, true);

    });

  });

});